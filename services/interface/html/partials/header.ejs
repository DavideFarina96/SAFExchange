<% if (locals.user) { %>
<script>var user_id = '<%= (user_id) %>' </script>
<% } %>

<div class="header w3-container w3-teal">
    <div class="w3-row">

        <div class="w3-half">
            <div class="w3-quarter header-elem">
                <h4><a href="/interface">SAFEx</a></h4>
            </div>

            <div class="w3-threequarter w3-center header-elem">
                <h5 class="w3-half">BTCUSD: <span id="current-BTCUSD"></span>
                </h5>
                <h5 class="w3-half">ETHUSD: <span id="current-ETHUSD"></span>
                </h5>
            </div>
        </div>

        <div class="w3-half">
            <div class="w3-threequarter w3-center header-elem">
                <% if (locals.user) { %>
                <h5 class="w3-third">USD: <span id="user-USD"></span>
                </h5>
                <h5 class="w3-third">BTC: <span id="user-BTC"></span>
                </h5>
                <h5 class="w3-third">ETH: <span id="user-ETH"></span>
                </h5>
                <% } %>
            </div>

            <div class="w3-quarter w3-right-align header-elem">
                <% if (locals.user) { %>

                <div id="user-stats" class="helper">
                    <div class="user-name">
                        <%= user.name %>
                    </div>
                    <div class="user-profile">
                        <span class="helper"></span>
                        <img class="user-icon" src="<%= user.image_url %>">
                        <!--src="https://lh4.googleusercontent.com/-LBYekgpU62I/AAAAAAAAAAI/AAAAAAAAAAA/AKxrwcbyUKmrEqQeD1zHORu3o7zpRdBmPA/s96-c/photo.jpg"></img>-->
                    </div>
                </div>

                <div id="logout-container" class="hover-logout w3-teal">
                    <a href="/interface/logout">logout</a>
                </div>

                <% } %>
            </div>
        </div>
    </div>
</div>
